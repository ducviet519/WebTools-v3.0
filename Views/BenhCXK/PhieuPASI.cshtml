
@{
    ViewData["Title"] = "_PhieuDAPSA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade bd-example-modal-xl" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3882b6;">
                <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color:white;">&times;&nbsp;&nbsp;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formPASI">
                    <h1 style="text-align:center;">THANG ĐIỂM PASI</h1>
                    <div class="row">
                        <label class="col-form-label col-2">Mã KH: <strong>18009858</strong></label>
                        <label class="col-form-label col-3">Họ và tên: Nguyễn Thị A</label>
                        <label class="col-form-label col-2">Ngày sinh: 01/01/1987</label>
                        <label class="col-form-label col-2">Giới tính: Nữ</label>
                        <div class="form-group row">
                            <label for="NguoiDanhGia" class="col-form-label col-auto">Người đánh giá:</label>
                            <div class="col-auto">
                                <select class="form-control" id="NguoiDanhGia" name="NguoiDanhGia">
                                    <option>Đặng Thị Hồng Hoa</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ketQua" class="col-sm-auto col-form-label">Kết quả đánh giá:</label>
                        <div class="col-sm-3 mr-5">
                            <input type="text" class="form-control" id="ketQua">
                        </div>
                        <label for="ketQua" class="col-sm-auto col-form-label mr-2">Kết luận:</label>
                        <label for="ketQua" class="col-sm-auto col-form-label">PASI = </label>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-info" type="submit">Lưu</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
